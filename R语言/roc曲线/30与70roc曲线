library(pROC)
library(tableone)
library(readxl)

# 删除已存在的 data 对象
rm(data)

# 从Excel文件中读取数据
data <- read_xlsx("D:\\test\\验证队列.xlsx", sheet = 2)

# 确保评分列为数值型
mod <- glm(预后不良 ~ 有无呕血 + 意识状态改变 + 肾功能不全 + 白蛋白降低 + INR延长, family = "binomial", data = data)
summary(mod)

pre <- predict(mod, type = "response", newdata = data)
ROC <- roc(data$预后不良, pre)

# 计算 AUC 和最佳截断值
auc_value1 <- ROC$auc
best_coords1 <- coords(ROC, "best")
best_cutoff1 <- best_coords1["threshold"]
sensitivity1 <- best_coords1["sensitivity"]
specificity1 <- best_coords1["specificity"]
youden_index1 <- sensitivity1 + specificity1 - 1

# 绘制 ROC 曲线图并添加文本
plot(ROC, main = "ROC Curve (Model Predictions)", col = "blue")
text(0.5, 0.4, paste("AUC:", format(auc_value1, nsmall = 7)), pos = 4)
text(0.5, 0.35, paste("Best Cutoff:", round(best_cutoff1, 2)), pos = 4)
text(0.5, 0.3, paste("Sensitivity:", round(sensitivity1, 2)), pos = 4)
text(0.5, 0.25, paste("Specificity:", round(specificity1, 2)), pos = 4)
text(0.5, 0.2, paste("Youden Index:", round(youden_index1, 2)), pos = 4)

# 计算线性组合
data$linear_pred <- -3.377 + 0.806 * data$有无呕血 + 1.152 * data$意识状态改变 +
  0.712 * data$肾功能不全 + 0.973 * data$白蛋白降低 +
  0.899 * data$INR延长

# 计算预测概率 (logit function)
data$predicted_prob <- 1 / (1 + exp(-data$linear_pred))

# 输出预测结果
head(data$predicted_prob)

roc_curve <- roc(data$预后不良, data$predicted_prob)

# 计算 AUC 和最佳截断值
auc_value2 <- roc_curve$auc
best_coords2 <- coords(roc_curve, "best")
best_cutoff2 <- best_coords2["threshold"]
sensitivity2 <- best_coords2["sensitivity"]
specificity2 <- best_coords2["specificity"]
youden_index2 <- sensitivity2 + specificity2 - 1

# 绘制 ROC 曲线图并添加文本
plot(roc_curve, main = "ROC Curve (Manual Predictions)", col = "red")
text(0.5, 0.4, paste("AUC:", format(auc_value2, nsmall = 7)), pos = 4)
text(0.5, 0.35, paste("Best Cutoff:", round(best_cutoff2, 2)), pos = 4)
text(0.5, 0.3, paste("Sensitivity:", round(sensitivity2, 2)), pos = 4)
text(0.5, 0.25, paste("Specificity:", round(specificity2, 2)), pos = 4)
text(0.5, 0.2, paste("Youden Index:", round(youden_index2, 2)), pos = 4)

# 显示 AUC 置信区间
ci(roc_curve)



